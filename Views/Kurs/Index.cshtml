@model IEnumerable<Kurs>

<table class="table">

    <a href="/Kurs/Create" class="btn btn-primary" >  Kurs Ekle  </a>

    <thead>

        <tr>
            <th>Kurs Id</th>
            <th>Kurs Ad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kurs in Model)
        {
            <tr>
                <td>@kurs.KursId</td>
                <td>@kurs.Baslik</td>
                <td></td>
                <td>
                    <a asp-controller="Kurs"  asp-action="Edit" asp-route-id = "@kurs.KursId"  class="btn btn-sm btn-primary">Detay and Edit</a>
                   
                   <form asp-controller="Kurs" asp-action="Delete" method="post">
                    <input  type="hidden" value="@kurs.KursId" name="id">
                    <button type="submit" asp-controller="Kurs" asp-action="Delete" asp-route-id = "@kurs.KursId" class="btn btn-sm btn-danger">Delete</button>

                   </form> 
                </td>
            </tr>
        }
    </tbody>
</table>
